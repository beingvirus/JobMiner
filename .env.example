# JobMiner Environment Configuration
# Copy this file to .env and update the values as needed

# Database Configuration
JOBMINER_DATABASE_URL=sqlite:///jobminer.db
# For PostgreSQL: postgresql://username:password@localhost/jobminer
# For MySQL: mysql://username:password@localhost/jobminer

# Logging Configuration
JOBMINER_LOG_LEVEL=INFO
JOBMINER_LOG_FILE=jobminer.log

# Scraper Configuration
JOBMINER_DEFAULT_DELAY=2.0
JOBMINER_DEFAULT_TIMEOUT=30
JOBMINER_MAX_RETRIES=3

# Output Configuration
JOBMINER_OUTPUT_DIR=output
JOBMINER_DEFAULT_FORMAT=both

# Optional: Custom User Agent
# JOBMINER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Optional: Proxy Configuration (if needed)
# JOBMINER_PROXY_HTTP=http://proxy.example.com:8080
# JOBMINER_PROXY_HTTPS=https://proxy.example.com:8080

# Optional: API Keys (for specific scrapers that might need them)
# LINKEDIN_API_KEY=your_linkedin_api_key
# INDEED_API_KEY=your_indeed_api_key
